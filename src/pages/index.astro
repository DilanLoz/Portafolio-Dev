---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import SocialRepo from "../components/SocialRepo.astro";
import EmailIcon from "../components/icons/Email.astro";
import JobIcon from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Languages from "../components/Languages.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import Learning from "../components/Learning.astro";
import LanguageIcon from "../components/icons/Language.astro";
import LearningIcon from "../components/icons/Certificate.astro";
---

<Layout
  title="Dilan Lopez - Desarrollador Fullstack"
  description="Contactame para trabajar conmigo."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-20">
      <div class="flex flex-col lg:flex-row items-center lg:items-start gap-10">
        <!-- Contenedor de la imagen -->
        <div class="flex-shrink-0 mx-auto">
  <div class="relative group backdrop-blur-lg">
    <div
      class="p-[4px] rounded-[16px] border border-white backdrop-blur-md inline-block"
    >
      <img
        class="rounded-[16px] w-[100px] md:w-[150px] lg:w-[200px] h-auto select-none pointer-events-none"
        src="FotPerfil.png"
        alt="Foto de Dilan Lopez"
        draggable="false"
      />
    </div>
  </div>

  <!-- Botón de descarga de CV -->
  <div class="text-center mt-6">
    <a
      href="/CV-DilanLopez.pdf"
      download
      class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-md text-white font-semibold rounded-full border border-white/30 shadow-lg transition-all duration-300 hover:bg-white/20 hover:scale-105"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v12m0 0l-3-3m3 3l3-3M4 20h16" />
      </svg>
      Descargar CV
    </a>
  </div>
</div>


        <!-- Contenido al lado derecho -->
        <div
          class="flex flex-col items-center lg:items-start text-center lg:text-left"
        >
          <h1
            id="inicio"
            class="text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
          >
            Hey, soy Dilan Lopez
          </h1>
          <h2 class="text-xl lg:text-1xl pb-6 max-w-[700px] leading-relaxed">
            <span class="opacity-80">+1 año de experiencia. </span>
            <span class="font-bold text-customAmarillo">
              Soy un desarrollador apasionado por crear software moderno,
              optimizado y escalable.
            </span>
            <span class="opacity-80">
              Me enfoco en el backend con Laravel, PHP y Node.js, y también
              disfruto el desarrollo frontend con React, Tailwind y TypeScript.
            </span>
          </h2>
          <nav class="flex gap-4 mt-8 flex-wrap">
            <SocialRepo href="https://github.com/DilanLoz">
              <GitHubIcon class="size-4 md:size-6" />GitHub
            </SocialRepo>
            <SocialRepo href="https://www.linkedin.com/in/dilan-lopez/">
              <LinkedInIcon class="size-4 md:size-6" />LinkedIn
            </SocialRepo>
            <SocialRepo href="mailto:dilanloz@gmail.com">
              <EmailIcon class="size-4 md:size-6" />dilanloz@gmail.com
            </SocialRepo>
          </nav>
        </div>
      </div>

      <!-- Botón para escritorio 
      <a
        href="https://www.linkedin.com/in/dilan-lopez/"
        target="_blank"
        rel="noopener noreferrer"
        class="hidden lg:flex my-5 ml-16"
      >
        <Badge>Disponible para trabajar hoy</Badge>
      </a>-->
    </SectionContainer>
    <SectionContainer id="tecnologias">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
        <LanguageIcon class="size-7" />
        Lenguajes y Tecnologías
      </h2>
      <Languages />
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
        <JobIcon class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="aprendizaje">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
        <LearningIcon class="size-7" />
        Formación y Certificaciones
      </h2>
      <Learning />
    </SectionContainer>
    <button
      id="btn-scroll-top"
      class="fixed bottom-10 right-40 z-50 bg-amber-400 text-black font-semibold p-3 rounded-full shadow-lg transition-all duration-300 hover:bg-amber-500 hover:scale-110 hidden text-2xl"
      title="Volver arriba"
    >
      ↑
    </button>
  </main>
  <script is:inline>
    const scrollBtn = document.getElementById("btn-scroll-top");

    window.addEventListener("scroll", () => {
      if (window.scrollY > 300) {
        scrollBtn.classList.remove("hidden");
      } else {
        scrollBtn.classList.add("hidden");
      }
    });

    scrollBtn.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
  </script>
</Layout>
