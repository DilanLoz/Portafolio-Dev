---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
}

export const prerender = true;

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <!-- ================= LOADER GLOBAL ================= -->
    <div
      id="global-loader"
      class="fixed inset-0 bg-black/70 backdrop-blur-sm flex items-center justify-center z-[9999] transition-opacity duration-500"
    >
      <div class="flex flex-col items-center gap-3">
        <svg
          class="animate-spin h-12 w-12 text-neutral-200"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
        >
          <circle
            class="opacity-25"
            cx="12"
            cy="12"
            r="10"
            stroke="currentColor"
            stroke-width="4"
          />
          <path
            class="opacity-75"
            fill="currentColor"
            d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"
          />
        </svg>

        <p class="text-neutral-400 text-lg">Cargando...</p>
      </div>
    </div>

    <!-- ================= FONDO SKY ================= -->
    <div
      class="fixed inset-0 -z-10 w-full h-full
      [background:radial-gradient(140%_140%_at_50%_10%,#000_35%,#0ea5e9_100%)]"
    ></div>

    <!-- ================= CONTENIDO ================= -->
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- ================= SCRIPTS ================= -->
    <script>
      window.addEventListener("load", () => {
        const loader = document.getElementById("global-loader");

        setTimeout(() => {
          loader.style.opacity = "0";

          setTimeout(() => {
            loader.style.display = "none";
          }, 500);
        }, 400);
      });
    </script>
  </body>
</html>

<style>
  :root {
    color-scheme: dark;
  }

  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;
  }

  body {
    background-color: black;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    color: white;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
